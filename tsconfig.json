{
    "compilerOptions": {
      "target": "es2016",
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "declaration": true,
      "declarationDir": "types",
      "sourceMap": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }